{
  "name": "folk-canvas",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "bench": "node --experimental-strip-types packages/repo-utils/dist/benchmark.js",
    "build": "npm run build --workspaces",
    "dev": "npm run dev -w website --watch",
    "clean": "find . -name 'dist' -o -name 'node_modules' -o -name '.wireit' -o -name 'tsconfig.tsbuildinfo' | xargs rm -rf",
    "clean:wireit": "find . -name '.wireit' | xargs rm -rf",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "wireit": "^0.14.11"
  }
}
