{
  "name": "@folkjs/web-extension",
  "version": "0.0.8",
  "private": true,
  "description": "folkjs web extension",
  "author": "Christopher Shank <chris.shank.23@gmail.com>",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build --watch",
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty && vite build",
      "clean": "if-file-deleted",
      "dependencies": [
        "../packages/dom:build",
        "../packages/canvas:build",
        "../packages/geometry:build",
        "../packages/labs:build"
      ],
      "files": [
        "src/**",
        "public/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    }
  },
  "dependencies": {
    "@folkjs/canvas": "0.0.8",
    "@folkjs/dom": "0.0.8",
    "@folkjs/geometry": "0.0.8",
    "@folkjs/labs": "0.0.8",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.12.3",
    "rollup-plugin-tla": "^0.0.2",
    "typescript": "^5.8.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-wasm": "^3.4.1",
    "vite-plugin-web-extension": "^4.4.3"
  }
}
