{
  "name": "Folk Canvas",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_icon": {
      "32": "images/icon32.png"
    },
    "default_title": "Canvasify web page."
  },

  "web_accessible_resources": [
    {
      "resources": ["dist/injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
