{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    // TODO: turn back on after packages refactor
    "verbatimModuleSyntax": false,

    /* Strictness */
    "strict": true,
    // TODO: MAYBE turn on later, this is a lot and might be a poor tradeoff for performance
    "noUncheckedIndexedAccess": false,
    // TODO: turn back on after packages refactor
    "noImplicitOverride": false,
    "erasableSyntaxOnly": true,

    "experimentalDecorators": true,

    /* If transpiling with TypeScript: */
    "moduleResolution": "bundler",
    "allowJs": true,
    "module": "ESNext",
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "composite": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@folkjs/*": ["packages/*/src"]
    }
  }
}
