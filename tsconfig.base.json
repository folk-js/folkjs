{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    // TODO: turn back on after packages refactor
    "verbatimModuleSyntax": false,

    /* Strictness */
    "strict": true,
    // TODO: MAYBE turn on later, this is a lot and might be a poor tradeoff for performance
    "noUncheckedIndexedAccess": false,
    // TODO: turn back on after packages refactor
    "noImplicitOverride": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": false,

    "experimentalDecorators": true,

    /* If transpiling with TypeScript: */
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "module": "ESNext",
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["@webgpu/types", "@types/wicg-file-system-access", "bun-types"],
    "composite": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@folkjs/lib": ["packages/lib/src"],
      "@folkjs/lib/*": ["packages/lib/src/*"],
      "@folkjs/labs": ["packages/labs/src"],
      "@folkjs/labs/*": ["packages/labs/src/*"],
      "@folkjs/propagators": ["packages/propagators/src"],
      "@folkjs/propagators/*": ["packages/propagators/src/*"],
      "@folkjs/geometry": ["packages/geometry/src"],
      "@folkjs/geometry/*": ["packages/geometry/src/*"]
    }
  }
}
