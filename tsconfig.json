{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "checkJs": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "types": ["@webgpu/types", "@types/node", "@types/wicg-file-system-access", "bun-types"],
    "baseUrl": ".",
    "paths": {
      "@folkjs/lib": ["packages/lib/src"],
      "@folkjs/lib/*": ["packages/lib/src/*"],
      "@folkjs/labs": ["packages/labs/src"],
      "@folkjs/labs/*": ["packages/labs/src/*"],
      "@folkjs/propagators": ["packages/propagators/src"],
      "@folkjs/propagators/*": ["packages/propagators/src/*"],
      "@folkjs/geometry": ["packages/geometry/src"],
      "@folkjs/geometry/*": ["packages/geometry/src/*"],
      "@folkjs/web-extensions": ["packages/web-extension/src"],
      "@folkjs/web-extensions/*": ["packages/web-extension/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.html", "vite.config.ts", "packages/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
