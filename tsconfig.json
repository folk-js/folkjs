{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "checkJs": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "types": ["@webgpu/types", "@types/node", "@types/wicg-file-system-access", "bun-types"],
    "baseUrl": ".",
    "paths": {
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@labs": ["labs"],
      "@labs/*": ["labs/*"],
      "@folk-systems/propagators": ["packages/propagators/src"],
      "@folk-systems/propagators/*": ["packages/propagators/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.html", "vite.config.ts", "packages/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
